{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["cypress", "node"]
  },
  "include": ["src", "**/*.ts", "src**"],
  "exclude": ["node_modules", "dist"]
}
